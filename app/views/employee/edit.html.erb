    <%= f.label :position %><br>
    <%= f.text_field :position, class:"form-control" %>
  </div> <!-- form-group -->
  <div class="form-group">
    <%= f.label :employeeid %><br>
    <%= f.text_field :employeeid, class:"form-control" %>
  </div> <!-- form-group -->
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class:"form-control" %>
  </div> <!-- form-group -->
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class:"form-control" %>
  </div> <!-- form-group -->
  <div class="form-actions">
    <%= f.submit 'Save Employee!', :class => 'btn btn-primary' %>
  </div> <!-- form-actions -->
</div> <!-- container -->
<%=link_to 'Back', employee_index_path %>
<% end %>